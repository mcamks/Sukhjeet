<script>

    function GetYahooLookUp() {
            var jsonData = JSON.stringify({
                sym: $("#txtTicker").val(),
            });
            $.ajax({
                type: "POST",
                url: "/Charts/GetLookUpData",
                contentType: "application/json; charset=utf-8",
                data: jsonData,
                dataType: "json",
                async: false,
                success: function (data) {
                    var myArr = $.parseJSON(data);
                    var arr = [];
                    $.each(myArr.ResultSet.Result,function(i,obj){
                        arr.push(obj.symbol);
                    });
                    $("#txtTicker").autocomplete({
                           source: arr,
                           select: function (event, ui) {
                               $("#txtTicker").val(ui.item.label);
                            window.location.href = 'http://' + '@url' + '/Charts/SaveUserChartHistory?symbol=' + ui.item.value + '&chartType=3' + '&viewType=ThirdChart';
                            return false;
                           },
                       });
                }
            });
        }


</script>


